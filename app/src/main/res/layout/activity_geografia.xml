<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_geografia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Geografía"
        android:textAlignment="center"
        android:textColor="#FB8C00"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.051" />

    <TextView
        android:id="@+id/tv_selecGeo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selecciona el video que quieres ver:"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.485"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_geografia"
        app:layout_constraintVertical_bias="0.044" />

    <Button
        android:id="@+id/b_V1"
        android:layout_width="337dp"
        android:layout_height="48dp"
        android:background="#FFF3E0"
        android:text="Los 5 Continentes"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_selecGeo"
        app:layout_constraintVertical_bias="0.387" />

    <Button
        android:id="@+id/b_V4"
        android:layout_width="337dp"
        android:layout_height="48dp"
        android:background="#FFA726"
        android:text="Mares y Océanos del Mundo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_selecGeo"
        app:layout_constraintVertical_bias="0.962" />

    <Button
        android:id="@+id/b_V3"
        android:layout_width="337dp"
        android:layout_height="48dp"
        android:background="#FFB74D"
        android:text="Biomas del Mundo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_selecGeo"
        app:layout_constraintVertical_bias="0.782" />

    <Button
        android:id="@+id/b_V2"
        android:layout_width="337dp"
        android:layout_height="48dp"
        android:background="#FFE0B2"
        android:text="Climas del Mundo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_selecGeo"
        app:layout_constraintVertical_bias="0.591" />

</androidx.constraintlayout.widget.ConstraintLayout>