<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EncuestasActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/contacto"
        app:cardCornerRadius="15sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



            <EditText
                android:id="@+id/et_Para"
                android:layout_width="38dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:hint="Para"
                android:inputType="textEmailAddress"
                android:text="zs19016413@estudiantes.uv.mx" />

            <TextView
                android:id="@+id/textViews"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/et_Para"
                android:layout_centerHorizontal="true"
                android:text="Rellena el siguiente formulario para enviar tus sugerencias al programador."
                android:textColor="#000000" />

            <EditText
                android:id="@+id/et_Encabezado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="63dp"
                android:ems="10"
                android:hint="Asunto"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/et_Contenido"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="122dp"
                android:ems="10"
                android:gravity="start|top"
                android:hint="Redacta tu mensaje"
                android:lines="10" />

            <Button
                android:id="@+id/btnEnviar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="195dp"
                android:onClick="Send"
                android:text="Enviar"
                android:textStyle="bold" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>


